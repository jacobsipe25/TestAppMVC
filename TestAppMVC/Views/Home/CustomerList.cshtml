@model IEnumerable<TestAppMVC.Models.Customer>

@{
    ViewBag.Title = "CustomerList";
}

<h2>CustomerList</h2>

<p>
    @Html.ActionLink("Create New Customer", "AddCustomer","Home")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telephone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telephone)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditCustomer", new { id=item.ID }) |
            @Html.ActionLink("Details", "ViewCustomer", new { id=item.ID }) |
            @Html.ActionLink("Delete", "DeleteCustomer", new { id=item.ID })
        </td>
    </tr>
}

</table>
